ScreenManager:
    MainScreen:
    ItemsScreen:
    NewItemScreen:
    ViewItemScreen:
    TemplateCreateScreen:
    EditTemplateScreen

<MainScreen>
    name: "main_screen"
    id: listar

    MDBoxLayout:
        orientation: "vertical"
        theme_bg_color: "Custom"
        md_bg_color: "242c50"
        MDTopAppBar:
            id: topbar
            type: "small"
            theme_bg_color: "Custom"
            md_bg_color: "3b435f"
            MDTopAppBarTitle:
                text: "Lister"
            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "eraser"
                    on_release: root.reset_list()
                MDActionTopAppBarButton:
                    icon: "magnify"
                    on_release: root.search()
        ScrollView:
            pos_hint: {'center_y': 0.5, "center_x": 0.5}
            size_hint_x: 0.9
            spacing: 10

            MDList:
                id: list_container
   
    MDFabButton:
        id: menu_btn
        icon: "plus-thick"
        pos_hint: {'center_x': .85, 'center_y': .1}
        on_release: root.manager.current = "template_create_screen"
    

<ListOfLists>
    id: list_of_lists
    size_hint_y: None

    MDListItem:
        id: list_of_list_item
        on_release: root.on_release()
        theme_bg_color: "Custom"
        md_bg_color: "3d5189"

        MDListItemHeadlineText:
            id: headline
            text: "Headline"
            theme_text_color: "Custom"
            text_color: "c0cbf4"

        MDIconButton:
            icon: "trash-can-outline"
            theme_text_color: "Custom"
            text_color: "dc747d"
            on_release: (root.delete_list_dialog(), app.refresh_folder_view())


<ListOfItems>
    id: list_of_items
    size_hint_y: None
    radius: 24
    theme_bg_color: "Custom"
    md_bg_color: "566298"
    adaptive_height: True
    spacing: "10dp"
    padding: "10dp"
    MDListItemHeadlineText:
        id: headline
        text: "Headline"
        pos_hint: {"center_y": 0.5}
    MDIconButton:
        id: delete_item
        pos_hint: {"center_y": 0.5}
        icon: "trash-can-outline"
        on_release: root.delete_item(list_of_items)
        theme_text_color: "Custom"
        text_color: "e1747e"
    MDIconButton:
        id: check
        pos_hint: {"center_y": 0.5}
        icon: "checkbox-blank-outline"
        on_release: root.mark(check)

<NewFieldForm>
    MDBoxLayout:
        orientation:"horizontal"
        size_hint_y:None
        adaptive_height:True
        padding:10

        MDTextField:
            hint_text:"Field name..."
            id: name
            mode:"outlined"
            input_type:"text"

        MDDropDownItem:
            id: category_item
            on_release: root.menu_open(self)

            MDDropDownItemText:
                text: "Text"
                id: category_text

<NewItemForm>
    adaptive_height: True
    MDTextField:
        id: new_field_value
        MDTextFieldHintText:
            id: helper_text
            mode: "persistent"
    MDTextFieldTrailingIcon:
        pos_hint: {"center_y": 0.5}
        id: field_type_icon
        icon: "note-text-outline"
     

<ItemsScreen>
    name: "items_screen"
    id: items_screen
    MDBoxLayout:
        orientation: "vertical"
        theme_bg_color: "Custom"
        md_bg_color: "242c50"

        MDTopAppBar:
            id: topbar
            type: "small"
            theme_bg_color: "Custom"
            md_bg_color: "3b435f"
            MDTopAppBarTitle:
                id: list_title
                text: "Lister"
            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: "sort"
                    on_release: root.sort_dropdown(self)
                MDActionTopAppBarButton:
                    icon: "eraser"
                    on_release: root.reset_list()
                MDActionTopAppBarButton:
                    icon: "magnify"
                    on_release: root.search()
                MDActionTopAppBarButton:
                    id: dots
                    icon: "dots-vertical"
                    on_release: root.menu_open(self)

        ScrollView:
            id: scroll_area
            pos_hint: {'center_y': 0.5, "center_x": 0.5}
            size_hint_x: 0.9
            spacing: 10

        MDBoxLayout:
            size_hint: (.9, 0.10)
            pos_hint: {'center_y': 0.5, "center_x": 0.5}
            MDIconButton:
                icon: "backspace"
                on_release: root.manager.current = 'main_screen'
                elevation: 2
                gravity: "left"
                pos_hint: {"center_y": 0.5}
                them_icon_color: "Custom"
                icon_color: "a8b0d7"
            Widget:
            MDIconButton:
                icon: "pencil-outline"
                on_release: root.new_item(list_title.text) 
                elevation: 2
                gravity: "right"
                pos_hint: {"center_y": 0.5}
                them_icon_color: "Custom"
                icon_color: "a8b0d7"


<NewItemScreen>
    name: "new_item_screen"
    id: new_item
    MDBoxLayout:
        orientation: "vertical"
        theme_bg_color: "Custom"
        md_bg_color: "242c50"
        MDLabel:
            id: item_title
            halign: "center"
            font_style: "Title"
            pos_hint: {"center_y": 0.95}
            adaptive_height: True

        ScrollView:
            pos_hint: {'top': 0.5 + 0.8/2}
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)
                padding: dp(20)
                adaptive_height:True
                size_hint_y: None
                id: added_items

        MDBoxLayout:
            size_hint: (.9, 0.10)
            pos_hint: {'center_y': 0.1, "center_x": 0.5}
            MDIconButton:
                icon: "backspace"
                size_hint: None, None
                gravity: "left"
                pos_hint: {"center_y": 0.5}
                them_icon_color: "Custom"
                icon_color: "a8b0d7"
                on_release: root.manager.current = 'items_screen'
            Widget:
            MDIconButton:
                icon: "content-save"
                gravity: "right"
                pos_hint: {"center_y": 0.5}
                theme_text_color: "Custom"
                text_color: "a8b0d7"
                on_release: root.on_save()
  
    

<ViewItemScreen>
    name: "view_item_screen"
    orientation: "vertical"
    id: view_item
    MDBoxLayout:
        orientation: "vertical"
        theme_bg_color: "Custom"
        md_bg_color: "242c50"
        MDLabel:
            id: item_title
            halign: "center"
            pos_hint: {"center_y": 0.95}
            adaptive_height: True
            opacity: 0

        MDLabel:
            id: display_title
            halign: "center"
            font_style: "Title"
            pos_hint: {"y": 0.95}
            adaptive_height: True

        ScrollView:
            pos_hint: {'top': 0.5 + 0.8/2}
            MDBoxLayout:
                orientation: "vertical"
                adaptive_height:True
                size_hint_y: None
                padding: dp(20)
                spacing: dp(20)
                id: added_items

        MDBoxLayout:
            size_hint: (.9, 0.10)
            pos_hint: {'center_y': 0.1, "center_x": 0.5}
            MDIconButton:
                icon: "backspace"
                on_release: root.manager.current = 'items_screen'
                gravity: "left"
                pos_hint: {"center_y": 0.5}
                them_icon_color: "Custom"
                icon_color: "a8b0d7"
            Widget:
            MDIconButton:
                icon: "content-save"
                on_release: root.on_save()
                gravity: "right"
                pos_hint: {"center_y": 0.5}
                them_icon_color: "Custom"
                icon_color: "a8b0d7"


<TemplateCreateScreen>
    name: "template_create_screen"
    id: template_create_screen

    MDBoxLayout:
        orientation: "horizontal"
        padding: [20, 20, 20, 20]
        theme_bg_color: "Custom"
        md_bg_color: "242c50"

        MDTextField:
            pos_hint: {"top": 0.9}
            id: list_name
            hint_text: "List Name"
            mode: "outlined"
            input_type: "text"

        MDIconButton:
            pos_hint: {"top": 0.9}
            icon: "plus-thick"
            on_release: root.add_field()

    MDList:
        size_hint_x: .8
        pos_hint: {"top": 0.8, "center_x": 0.5}
        id: added_fields
        padding: [50, 0, 50, 25]


    MDBoxLayout:
        size_hint: (.9, 0.25)
        pos_hint: {'center_y': 0.1, "center_x": 0.5}
        MDIconButton:
            icon: "backspace"
            on_release: root.manager.current = "main_screen"
            gravity: "left"
            pos_hint: {"center_y": 0.5}
            them_icon_color: "Custom"
            icon_color: "a8b0d7"

        Widget:
        MDIconButton:
            icon: "content-save"
            on_release: (root.on_save(), app.refresh_folder_view())
            gravity: "right"
            pos_hint: {"center_y": 0.5}
            them_icon_color: "Custom"
            icon_color: "a8b0d7"

<EditTemplateScreen>
    name: "edit_template_screen"
    id: edit_templat_screen

    MDBoxLayout:
        orientation: "vertical"
        theme_bg_color: "Custom"
        md_bg_color: "242c50"
        spacing: dp(20)

        MDTopAppBar:
            id: topbar
            type: "small"
            theme_bg_color: "Custom"
            md_bg_color: "3b435f"
            MDTopAppBarTitle:
                id: list_title
                text: "Lister"

        MDTextField:
            id: template_text
            multiline: True
            size_hint_x: 0.9
            pos_hint: {"center_x": .5,"center_y": .85}

        Widget:

    MDBoxLayout:
        size_hint: (.9, 0.25)
        pos_hint: {'center_y': 0.1, "center_x": 0.5}
        MDIconButton:
            icon: "backspace"
            on_release: root.manager.current = "main_screen"
            gravity: "left"
            pos_hint: {"center_y": 0.5}
            them_icon_color: "Custom"
            icon_color: "a8b0d7"
        Widget:
        MDIconButton:
            icon: "content-save"
            on_release: root.on_save()
            gravity: "right"
            pos_hint: {"center_y": 0.5}
            them_icon_color: "Custom"
            icon_color: "a8b0d7"

<SearchDialog>:
    MDDialogContentContainer:
        MDTextField:
            id: search_field
            MDTextFieldHintText:
                text: "Search"
    MDDialogButtonContainer:
        MDButton:
            id: cancel_btn
            theme_bg_color: "Custom"
            md_bg_color: "ff757f"
            MDButtonText:
                theme_text_color: "Custom"
                text_color: "1f2335"
                text: "Cancel"
        MDButton:
            id: search_btn
            theme_bg_color: "Custom"
            md_bg_color: "7aa2f7"
            MDButtonText:
                theme_text_color: "Custom"
                text_color: "1f2335"
                text: "Search"

<RenameDialog>:
    MDDialogContentContainer:
        MDTextField:
            id: rename_field
            MDTextFieldHintText:
                text: "Rename"
    MDDialogButtonContainer:
        MDButton:
            id: cancel_btn
            theme_bg_color: "Custom"
            md_bg_color: "ff757f"
            MDButtonText:
                theme_text_color: "Custom"
                text_color: "1f2335"
                text: "Cancel"
        MDButton:
            id: rename_btn
            theme_bg_color: "Custom"
            md_bg_color: "7aa2f7"
            MDButtonText:
                theme_text_color: "Custom"
                text_color: "1f2335"
                text: "OK"


<TableView>:
    viewclass: 'MDLabel'
    RecycleGridLayout:
        id: recycle_grid
        cols: 4
        default_size: None, dp(26)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height

